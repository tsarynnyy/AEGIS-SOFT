{
  "expo": {
    "name": "Aegis AI",
    "slug": "aegis-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "aegisai",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aegis.wellness",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for health monitoring features.",
        "NSLocationWhenInUseUsageDescription": "This app uses location for wellness tracking.",
        "NSHealthShareUsageDescription": "Aegis AI needs access to your health data to monitor your wellness and detect potential health concerns.",
        "NSHealthUpdateUsageDescription": "Aegis AI can write wellness data to Apple Health."
      },
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.access": []
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.aegis.wellness"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
